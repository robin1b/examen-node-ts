<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Code Snippets</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #f8f9fa;
      }
      .container {
        margin-top: 50px;
      }
      .table {
        background: white;
        border-radius: 10px;
        overflow: hidden;
      }
      pre {
        background-color: #272822;
        color: #fff;
        padding: 10px;
        border-radius: 5px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="text-center mb-4">ðŸ“œ Code Snippets</h1>
      <table class="table table-striped table-bordered">
        <thead class="table-dark">
          <tr>
            <th>Title</th>
            <th>Code</th>
            <th>Language</th>
            <th>Tags</th>
          </tr>
        </thead>
        <tbody>
          <% snippets.forEach(snippet => { %>
          <tr>
            <td><%= snippet.title %></td>
            <td>
              <pre><code><%= snippet.code %></code></pre>
            </td>
            <td><%= snippet.language %></td>
            <td><%= snippet.tags.join(", ") %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
